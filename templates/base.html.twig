{% apply minifyHtml %}
<!DOCTYPE html>
<html lang=en>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
    <title>
        {% block title %}K-Dex{% endblock %}
    </title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/tailwind.css') }}">
        {% for css in cssArray|default([]) %}
            <link rel="stylesheet" href="{{ asset(css) }}">
        {% endfor %}
    {% endblock %}

    {% block javascripts %}
        {{ importmap() }}
    {% endblock %}
</head>
<body class="flex flex-col space-y-16">
    {% block body %}{% endblock %}
</body>
</html>
{% endapply %}
