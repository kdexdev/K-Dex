<input
    {# Global HTML properties #}
    type="{{        this.type }}"
    form="{{        this.formId }}"
    name="{{        this.name }}"
    placeholder="{{ this.placeholder ?? '' }}"
    value="{{       this.value ?? '' }}"
    {# Global verification properties #}
    {{ this.required ? 'required' : '' }}
    {{ this.disabled ? "disabled" : '' }}
    max="{{         this.maxVal ?? '' }}"
    min="{{         this.minVal ?? '' }}"
    maxlength="{{   this.maxLen ?? '' }}"
    minlength="{{   this.minLen ?? '' }}"
    pattern="{{     this.pattern ?? '' }}"
    autocomplete="{{ this.autocomplete ?? '' }}"

    {# Tailwind style classes #}
    class="
        w-full px-4 py-3 shadow-md
        text-white placeholder-grey
        bg-grey-950 rounded border border-secondary-light
        focus:border-primary focus:outline-none
        focus-visible:outline focus-visible:outline-primary
    "
/>
