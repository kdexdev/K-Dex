<{{ this.buttonObject }}
    type="button"
    class="
        px-8 py-3
        text-center text-base font-semibold
        flex justify-center items-center
        shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded
        transition ease-in duration-200
        {### GLOBAL-ISH ###
            bg-transparent
            border
            text-white hover:text-white active:text-white
            cursor-not-allowed opacity-70
        #}
        {### PRIMARY ###
            bg-primary hover:bg-primary-light
            border-primary hover:border-primary-light
            focus:ring-primary-light focus:ring-offset-orange-200
            active:bg-primary-dark active:ring-primary-dark active:ring-offset-primary-light
            text-primary
        #}
        {### CONFIRM / SUCCESS ###
            bg-success hover:bg-success-light
            border-success hover:border-success-light
            focus:ring-success-light focus:ring-offset-green-200
            active:bg-success-dark active:ring-success-dark active:ring-offset-success-light
            text-success
        #}
        {### WARNING ###
            bg-warning hover:bg-warning-light
            border-warning hover:border-warning-light
            focus:ring-warning-light focus:ring-offset-yellow-200
            active:bg-warning-dark active:ring-warning-dark active:ring-offset-warning-light
            text-warning
        #}
        {### DANGER ###
            bg-danger hover:bg-danger-light
            border-danger hover:border-danger-light
            focus:ring-danger-light focus:ring-offset-red-200
            active:bg-danger-dark active:ring-danger-dark active:ring-offset-danger-light
            text-danger
        #}
        {### NORMAL / SECONDARY ###
            bg-secondary hover:bg-secondary-light
            border-secondary hover:border-secondary-light
            focus:ring-secondary-light focus:ring-offset-brown-200
            active:bg-secondary-dark active:ring-secondary-dark active:ring-offset-secondary-light
            text-secondary
        #}
        {{ this.getTypeClasses() }}"
        {{ attributes.only(
            'disabled', 'type', 'form', 'name', 'value',
            'href', 'target', 'download')
        }}>
    {{ this.text }}
</{{ this.buttonObject }}>

